#!/bin/sh

PATH=/sbin:/usr/sbin:/bin:/usr/bin
NAME="blinkdrvad.ko"

case "$1" in
  start)
    echo "Starting $NAME"
    insmod /lib/modules/blinkdrvad.ko
    echo "$NAME loaded."
    ;;
  stop)  
    echo "Stopping $NAME"    
    rmmod blinkdrvad
    echo "$NAME stopped."
    ;;
  restart|force-reload)
    echo "Restarting $NAME"
    rmmod blinkdrvad
    sleep 1
    insmod /lib/modules/blinkdrvad.ko
    echo "$NAME restarted."
    ;;
  *)
    echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload}"
    exit 1
    ;;
esac

exit 0
